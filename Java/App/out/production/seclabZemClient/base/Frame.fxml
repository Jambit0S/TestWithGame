<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="base.Controller"
            prefHeight="800.0" prefWidth="1300"
>


    <ToolBar>
        <Button onAction="#ButtonAdd" prefWidth="220" prefHeight="30" text="Добавить"/>
        <Button onAction="#ButtonCount" prefWidth="280" prefHeight="30" text="Вычислить"/>
        <Button onAction="#ButtonExit" prefWidth="150" prefHeight="30" text="Обновить"/>
    </ToolBar>

    <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.rowIndex="1" layoutX="15" layoutY="60" >
        <columns>
            <TableColumn fx:id="ProductNumber" text="№" prefWidth="150">
            </TableColumn>
            <TableColumn fx:id="ProductName" text="Наименование" prefWidth="150" >
            </TableColumn>
            <TableColumn fx:id="ProductPrice" text="Цена" prefWidth="150">
            </TableColumn>
            <TableColumn fx:id="ProductCount" text="Количество" prefWidth="150">
            </TableColumn>
            <TableColumn fx:id="ProductSumm" text="Сумма" prefWidth="150">
            </TableColumn>
        </columns>
    </TableView>

    <TextField layoutY="500" layoutX="15" fx:id="MyTextField"/>
    <Label layoutX="15" layoutY="475" text="Обащая сумма товаров"/>


</AnchorPane>
